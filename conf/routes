# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET         /                      controllers.HomeController.main
GET         /quizPosition          controllers.HomeController.quizPosition(question:String,answer:String)

# Route for in-browser IDE GraphiQL
GET         /graphql               controllers.HomeController.graphiql
# Route for the main controller that accepts all requests
POST        /graphqlBody           controllers.HomeController.graphqlBody
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)

